dpkg::Pre-Invoke {"[ ! -e /etc/default/xbian-snap ] || . /etc/default/xbian-snap; [ "$ENABLEDAPT" = yes ] || exit 0; z=$(findmnt / -n --mtab -o source); z=${z#*\[\/}; export z=${z%%\/*}; if [ -x /usr/sbin/btrfs-auto-snapshot ]; then btrfs-auto-snapshot snapshot -k $KEEPAPT -l apt-run $z ;  fi ;" };
