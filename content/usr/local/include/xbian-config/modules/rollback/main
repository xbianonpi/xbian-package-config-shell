#|------------------------------------|
#|          Global variables          |
#|------------------------------------|

# The arguments this module accepts
ARGUMENTS=();

#|------------------------------------|
#|          Include files             |
#|------------------------------------|

source $BASEPATH/modules/snapshots/functions
if [ $GUIMODE -eq 1 ]; then
	source $BASEPATH/modules/rollback/dialogs
fi

#|------------------------------------|
#|           Main program             |
#|------------------------------------|

# Executes the GUI version of this module
function showGUIFn() {
	if [ $? -eq 0 ]; then
		VOLUMES=($(listVolumeFn));

		selectVolumeDlg;

		if [ $? -eq 0 ]; then
			if [ ! -z $RETURN ]; then
				VOLUME=${VOLUMES[$(($RETURN-1))]};

				IFS=$ORIGINALIFS;

				SNAPSHOTS=($(listSnapshotsFn $VOLUME));

				selectSnapshotDlg $SNAPSHOTS;

				if [ $? -eq 0 ]; then
					if [ ! -z $RETURN ]; then

						SNAPSHOT=${SNAPSHOTS[$(($RETURN-1))]};

						rollbackVolumeFn $VOLUME $SNAPSHOT;

						if [ $? -eq 0 ]; then
							showRollbackSuccessDlg $VOLUME;
							askForRebootFn;
						fi

						if [ $? -eq 1 ]; then
							showRollbackFailedDlg $VOLUME;
						fi
					fi
				fi
			fi
		fi
	fi
}

# Executes the command line version of this module
function showCMDFn() {
	echo;
}